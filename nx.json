{
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cacheableOperations": [
          "build"
        ]
      }
    }
  },
  "targetDefaults": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "{workspaceRoot}/dist"
      ]
    },
    "build:app": {
      "dependsOn": [
        "build"
      ]
    },
    "test:integration": {
      "dependsOn": [
        "build:app"
      ]
    }
  }
}
